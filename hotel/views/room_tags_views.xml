<?xml version="1.0"?>
<odoo>
    <record id="room_facility_action" model="ir.actions.act_window">
        <field name="name">Room facilities</field>
        <field name="res_model">room.tags</field>
        <field name="view_mode">tree,form</field>
    </record>


    <record id="tree_view_facilities" model="ir.ui.view">
        <field name="model">room.tags</field>
        <field name="arch" type="xml">
            <tree string="Vehicle Tags" editable="bottom">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </tree>
        </field>
    </record>
</odoo>